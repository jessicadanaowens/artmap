<div class="col-md-4"></div>
<div class="col-md-4 enter-box">
    <h2>Sign up</h2>


    <row>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
         <%= devise_error_messages! %>

          <div class="field">
            <%= f.label :email  %><br />
            <%= f.email_field :email, autofocus: true, class:"registration-field" %>
          </div>

          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", class:"registration-field"  %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", class:"registration-field"  %>
          </div>

          <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
          <% end -%>

          <div class="actions">
            <%= f.submit "Sign up", class: "form-control" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
    </row>
</div>